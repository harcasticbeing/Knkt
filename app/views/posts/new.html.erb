<h2>Create a new Post!</h2>
<div class="col-8">
<form action="/posts" method="post">
  <input type="hidden" name="post[user]" value="<%= @user.id %>">
  <div>
    <label for="post_title" class="form-label">Title</label><br>
    <input type="text" name="post[title]" id="post_title" class="form-control">
  </div>
  <div>
    <label for="post_body" class="form-label">Body</label><br>
    <textarea name="post[body]" id="post_body" class="form-control" rows=15></textarea>
  </div>
  <br>
  <input type="submit" value="Create" class="btn btn-primary">
</form>
</div>